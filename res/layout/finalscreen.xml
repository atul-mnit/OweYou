<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    android:orientation="vertical"
    >

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="72dp"
           android:layout_height="72dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="35dp"
           android:layout_marginTop="16dp"
           android:src="@drawable/blueicon" />

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/imageView1"
           android:layout_marginBottom="22dp"
           android:layout_toRightOf="@+id/imageView1"
           android:text="You Are Even"
           android:textSize="18sp" />

       <Button
           android:id="@+id/bNewExpend"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/imageView1"
           android:layout_marginTop="38dp"
           
           android:background="@drawable/newexpend" />

       <Button
           android:id="@+id/bSettleUp"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/bNewExpend"
           android:layout_marginTop="10dp"
           android:background="@drawable/settleup" />

       <Button
           android:id="@+id/bDeleteP"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/bAddPartners"
           android:layout_marginTop="10dp"
           android:background="@drawable/reset" />

       <Button
           android:id="@+id/bAddPartners"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/bSettleUp"
           android:layout_marginTop="10dp"
           android:background="@drawable/addpart" />

       <Button
           android:id="@+id/bexit"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/bDeleteP"
           android:layout_marginTop="10dp"
           android:background="@drawable/exit" />

       <Button
           android:id="@+id/binfo"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginRight="6dp"
           android:background="@drawable/infobutton" />

</RelativeLayout>
